{
    "name": "kevinpijning/pest-plugin-prompt",
    "description": "Pest plugin to evaluate prompts",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "test",
        "testing",
        "plugin",
        "prompt"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "pestphp/pest": "^4.0.0",
        "pestphp/pest-plugin": "^4.0.0",
        "symfony/yaml": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "KevinPijning\\Prompt\\": "src/"
        },
        "files": [
            "src/Autoload.php",
            "src/Functions.php"
        ]
    },
    "require-dev": {
        "pestphp/pest-dev-tools": "^4.0.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ],
        "prompt:publish-assertions-templates": "php -r \"if (file_exists('tests/assertion-templates.php')) { exit(0); } copy('tests/fixtures/assertion-templates.php', 'tests/assertion-templates.php'); echo 'Created tests/assertion-templates.php'.PHP_EOL;\""
    },
    "extra": {
        "pest": {
            "plugins": [
                "KevinPijning\\Prompt\\Plugin"
            ]
        }
    }
}
